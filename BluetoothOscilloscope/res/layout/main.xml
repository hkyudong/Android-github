<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView
	android:id="@+id/txt_btstatus" 
	android:textColor="#00ff00"
	android:textSize="15dip"
	android:layout_centerHorizontal="true"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textStyle="normal"
    />
    <RelativeLayout
    android:id="@+id/relayout_waveformArea"
    android:layout_below="@id/txt_btstatus"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    	<com.hkyudong.BluetoothOscilloscope.WaveformView 
    	android:id="@+id/WaveformArea"
    	android:layout_marginLeft="0pt"
    	android:layout_height="70pt"
    	android:layout_width="70pt"
    	/>
    	<TextView 
    	android:id="@+id/txt_ch1pos"
    	android:layout_alignTop="@id/WaveformArea"
    	android:text="1-"
    	android:textColor="#00ff00"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_marginLeft="0pt"
    	/>
    	<TextView 
    	android:id="@+id/txt_ch2pos"
    	android:layout_alignTop="@id/WaveformArea"
    	android:text="2-"
    	android:textColor="#ff0000"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_marginLeft="0pt"
    	/>
    </RelativeLayout>
     <LinearLayout
    android:id="@+id/linearlayout_info_changeRadioButton"
    android:orientation="horizontal"
    android:layout_toRightOf="@id/relayout_waveformArea"
    android:layout_alignTop="@id/relayout_waveformArea"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    	<RadioGroup
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:checkedButton="@+id/rbtn_ch1"
    	>
    		<RadioButton 
    		android:id="@+id/rbtn_ch1"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_weight="1"
    		/>
    		<TextView 
    		android:id="@+id/txt_ch1_scale"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_weight="1"
    		/>
    		
    		<RadioButton 
    		android:id="@+id/rbtn_ch2"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_weight="1"
    		/> 
    		<TextView 
    		android:id="@+id/txt_ch2_scale"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_weight="1"
    		/>   	
    	</RadioGroup>
    </LinearLayout>
    
     <LinearLayout
    android:id="@+id/linearlayout_button_changePos"
    android:orientation="horizontal"
    android:layout_below="@id/relayout_waveformArea"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	
    <TextView 
    	android:text="显示基准修改："
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="2"
    	/>
    	<Button 
    	android:id="@+id/btn_position_up"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="上移"
    	/> 
    	<Button 
    	android:id="@+id/btn_position_down"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="下移"
    	/>
    </LinearLayout>
  	<LinearLayout
    android:id="@+id/linearlayout_button_changeScale"
    android:orientation="horizontal"
    android:layout_below="@id/linearlayout_button_changePos"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	<TextView 
    	android:text="电压范围修改："
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="2"
    	/>
    	<Button 
    	android:id="@+id/btn_scale_increase"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="增加"
    	/> 
    	<Button 
    	android:id="@+id/btn_scale_decrease"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="减少"
    	/>  	
    </LinearLayout>
    <LinearLayout
    android:id="@+id/linearlayout_info_timebase"
    android:orientation="horizontal"
    android:layout_below="@id/linearlayout_button_changeScale"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	<TextView 
    	android:text="时间间隔："
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	/>
    	<TextView 
    	android:id="@+id/txt_timebase"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	/>    	
    </LinearLayout>
    <LinearLayout
    android:id="@+id/linearlayout_button_changetimebase"
    android:orientation="horizontal"
    android:layout_below="@id/linearlayout_info_timebase"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	<TextView 
    	android:text="时间间隔修改："
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="2"
    	/>
    	<Button 
    	android:id="@+id/btn_timebase_increase"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="增加"
    	/> 
    	<Button 
    	android:id="@+id/btn_timebase_decrease"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	android:text="减少"
    	/>  	
    </LinearLayout>
    
	    
    <Button 
    android:id="@+id/button_connect"
    android:layout_below="@id/linearlayout_info_changeRadioButton"
    android:layout_toRightOf="@id/relayout_waveformArea"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="连接蓝牙设备"
    />
    
    <LinearLayout
    android:id="@+id/linearlayout_Togglebutton_Status"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    	<TextView 
    	android:text="运行状态修改："
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	/>
    	<ToggleButton 
    	android:id="@+id/tbtn_runtoggle"
    	android:textOn="运行中"
    	android:textOff="停止"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_weight="1"
    	/>
    </LinearLayout>
</RelativeLayout>
